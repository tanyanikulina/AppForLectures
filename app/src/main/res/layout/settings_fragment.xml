<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.settings.SettingsFragment">

    <EditText
        android:id="@+id/et"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="Put string here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="save text"
        app:layout_constraintEnd_toEndOf="@id/et"
        app:layout_constraintStart_toStartOf="@id/et"
        app:layout_constraintTop_toBottomOf="@id/et" />

    <Button
        android:id="@+id/btnRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="read text"
        app:layout_constraintEnd_toEndOf="@id/et"
        app:layout_constraintStart_toStartOf="@id/et"
        app:layout_constraintTop_toBottomOf="@id/btnSave" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/et"
        app:layout_constraintStart_toStartOf="@id/et"
        app:layout_constraintTop_toBottomOf="@id/btnRead"
        tools:text="Hello" />

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <EditText
        android:id="@+id/etFirst"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="First Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v" />

    <EditText
        android:id="@+id/etLast"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v" />

    <Button
        android:id="@+id/btnSaveToDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="save to db"
        app:layout_constraintStart_toStartOf="@id/etFirst"
        app:layout_constraintTop_toBottomOf="@id/etFirst" />

    <Button
        android:id="@+id/btnReadFromDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="read from db"
        app:layout_constraintEnd_toEndOf="@id/etLast"
        app:layout_constraintTop_toBottomOf="@id/etLast" />

    <TextView
        android:id="@+id/tvDb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnReadFromDb"
        tools:text="Hello" />

</androidx.constraintlayout.widget.ConstraintLayout>